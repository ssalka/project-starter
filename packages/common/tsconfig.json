{
  "extends": ["../../tsconfig.json"],

  "include": ["src"],

  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "outDir": "build",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    // FIXME this was added as a workaround for happy-dom errors when running `pnpm build`
    "skipLibCheck": true,

    "paths": {
      "@ssalka/common/*": ["./src/*"],
      "@ssalka/api": ["../server/src/server"],
      "@ssalka/api/env": ["../server/env.d.ts"]
    }
  }
}
