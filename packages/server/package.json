{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "tsgo -b",
    "// NOTE": "currently doesn't work - see https://github.com/privatenumber/tsx/issues/210",
    "dev": "tsx watch --include ./.env src",
    "format": "prettier -w src/**/*.ts",
    "format:check": "prettier src/**/*.ts --check",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --format codeframe . ",
    "start": "node ./build",
    "test": "cross-env NODE_ENV=test vitest",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "// BUG": "should use `--noEmit` here as well, but it's incompatible with `-b`: https://github.com/microsoft/TypeScript/issues/58336",
    "typecheck": "tsgo -b",
    "typecheck:track": "tsx ../scripts/src/typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@auth/express": "^0.12.1",
    "@casl/ability": "^6.8.0",
    "@casl/mongoose": "^8.0.5",
    "@ssalka/common": "workspace:*",
    "@trpc/server": "^11.10.0",
    "body-parser": "^2.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "http-errors-enhanced": "^4.0.2",
    "lodash-es": "^4.17.23",
    "mongoose": "^9.2.1",
    "superjson": "^2.2.6",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.3.6"
  },
