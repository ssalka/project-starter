{
  "preset": "ts-jest",
  "globals": {
    "__DEV__": true,
    "ts-jest": {
      "tsConfig": "./config/tsconfig.client.json"
    }
  },
  "rootDir": "../",
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx"
  ],
  "moduleDirectories": [
    "node_modules",
    "."
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "testRegex": "/test/.*\\.spec\\.tsx?$",
  "testURL": "http://localhost/",
  "transform": {
    ".tsx?": "ts-jest"
  },
  "verbose": true
}
